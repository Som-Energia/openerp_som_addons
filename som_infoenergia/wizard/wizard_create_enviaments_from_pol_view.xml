<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_wizard_create_enviaments_from_pol_form">
            <field name="name">wizard.infoenergia.create.enviaments.from.pol.form</field>
            <field name="model">wizard.infoenergia.create.enviaments.from.pol</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Afegir pòlisses al Lot Infoenergia">
                    <field name="state" invisible="1"/>
                    <group attrs="{'invisible': [('state', '!=', 'init')]}" colspan="4">
                        <label string="Selecciona el Lot on vols afegir les pòlisses"/>
                        <field name="lot_enviament" domain="[('estat','!=','realitzat')]" colspan="4"/>
                    </group>
                    <group attrs="{'invisible': [('state', '=', 'finished')]}">
                        <button special="cancel" string="Cancelar" icon="gtk-cancel"/>
                        <button name="create_enviaments" type="object" string="Afegir" icon="gtk-ok"/>
                    </group>
                    <group attrs="{'invisible': [('state', '!=', 'finished')]}">
                        <label string="El procés es continuarà fent en segon plà."/>
                        <button special="cancel" string="Tancar" icon="gtk-ok"/>
                    </group>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_wizard_create_enviaments_from_pol">
            <field name="name">Afegir pòlisses al Lot Infoenergia</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.infoenergia.create.enviaments.from.pol</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_wizard_create_enviaments_from_pol_form"/>
        </record>
        <record id="values_wizard_create_enviaments_from_pol_form" model="ir.values">
            <field name="object" eval="1"/>
            <field name="name">Afegir pòlisses al Lot Infoenergia</field>
            <field name="key2">client_action_multi</field>
            <field name="key">action</field>
            <field name="model">giscedata.polissa</field>
            <field name="value" eval="'ir.actions.act_window,'+str(ref('action_wizard_create_enviaments_from_pol'))"/>
        </record>
    </data>
</openerp>
