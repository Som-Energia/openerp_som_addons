<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
	<data>
        <record id="view_wizard_report_test_group_accept_tests_form" model="ir.ui.view">
            <field name="name">wizard.report.test.group.accept.tests.form</field>
            <field name="model">wizard.report.test.group.accept.tests</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Acceptar els tests">
                    <field name="state" invisible="1"/>
                    <group colspan="4" col="2" attrs="{'invisible':[('state', '!=', 'init')]}">
                            <button name="do" string="Desactivar" icon="gtk-ok" type="object" />
                    </group>
                    <group colspan="4" col="4">
                        <field name="info" colspan="4" nolabel="1" height="150" width="600" readonly="1"/>
                    </group>
                    <group colspan="4" col="2" attrs="{'invisible':[('state', '=', 'init')]}">
                        <group>
                            <button special="cancel" string="Tancar" icon="gtk-no"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        <record id="action_wizard_report_test_group_accept_tests" model="ir.actions.act_window">
            <field name="name">Acceptar els tests</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.report.test.group.accept.tests</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wizard_report_test_group_accept_tests_form"/>
            <field name="target">new</field>
        </record>
    </data>
</openerp>
