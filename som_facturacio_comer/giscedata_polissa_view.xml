<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Fer readonly el camp del MAG de pòlissa-->
        <record model="ir.ui.view" id="giscedata_polissa_mag_readonly_som_tree">
            <field name="name">giscedata.polissa.mag.readonly.som.tree</field>
            <field name="model">giscedata.polissa</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="giscedata_repercussio_mecanismo_ajuste_gas.view_giscedata_polissa_form"/>
            <field name="arch" type="xml">
                <field name="coef_repercusio_gas" position="replace" >
                    <field name="coef_repercusio_gas" readonly="1"/>
                </field>
            </field>
        </record>

        <!-- Nova vista de impagats -->
        <record model="ir.ui.view" id="view_giscedata_polissa_deute_som_tree">
            <field name="name">giscedata_polissa_deute_som.tree</field>
            <field name="model">giscedata.polissa</field>
            <field name="inherit_id" ref="giscedata_facturacio_impagat_comer.view_giscedata_polissa_deute_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="pending_state" position="after">
                    <field name="resum_observacions_comptables"/>
                    <field name="data_ultima_factura" select="1"/>
                </field>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_giscedata_polissa_deute_som_tree">
            <field name="name">Contractes amb deute (Comptabilitat)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">giscedata.polissa</field>
            <field name="domain">[('debt_amount', '>', 0)]</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_giscedata_polissa_deute_som_tree"/>
            <field name="context">{'active_test': False}</field>
        </record>

        <menuitem name="Contractes amb deute (Comptabilitat)" action="action_giscedata_polissa_deute_som_tree" id="menu_view_giscedata_polissa_deute_som_tree"
                  parent="giscedata_facturacio_impagat.menu_giscedata_polissa_deute_tree"/>

        <record model="ir.ui.view" id="view_giscedata_polissa_deute_som_form">
            <field name="name">giscedata_polissa_deute_som.form</field>
            <field name="model">giscedata.polissa</field>
            <field name="inherit_id" ref="giscedata_polissa.view_polisses_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Facturació']" position="after">
                    <page string="Comptabilitat">
                        <field name="observacions_comptables" select="1"/>
                    </page>
                </xpath>
            </field>
        </record>

        <!--Modificació payment mode en readonly-->
        <record model="ir.ui.view" id="view_payment_mode_form">
            <field name="name">payment.mode.form</field>
            <field name="model">payment.mode</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account_payment.view_payment_mode_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='type']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='active']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='journal']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='tipo']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='require_bank_account']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_payment_mode_form_require_bank_account">
            <field name="name">payment.mode.form.require_bank_account</field>
            <field name="model">payment.mode</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account_payment_extension.view_payment_mode_form_require_bank_account"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='require_bank_account']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_payment_mode_form_remesas">
            <field name="name">payment.mode.form</field>
            <field name="model">payment.mode</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="l10n_ES_remesas.view_payment_mode_form_remesas"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tipo']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='cif']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='nombre']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='sufijo']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='sepa_creditor_code']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='ine']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='financiado']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='mandate_scheme']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='inc_domicile']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='alt_domicile_format']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='cedente']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='cor1_scheme']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
