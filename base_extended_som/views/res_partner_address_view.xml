<openerp>
    <data>
        <record id="view_partner_address_form_prefix_fields" model="ir.ui.view">
            <field name="name">res.partner.address.form.prefix.fields</field>
            <field name="model">res.partner.address</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_address_form1"/>
            <field name="priority" eval="30"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='phone']" position="replace" />
                <xpath expr="//field[@name='fax']" position="replace" />
                <xpath expr="//field[@name='email']" position="replace" />
                <xpath expr="//field[@name='mobile']" position="replace" />
                <xpath expr="//separator[@string='Comunication channels']" position="after">
                    <group col="16" colspan="4">
                        <field name="mobile_prefix" colspan="2" widget_props="{'showMenu': false, 'showFolder': false}"/>
                        <field name="mobile" colspan="6"/>
                        <field name="email" colspan="6" widget="email"/>
                    </group>
                    <group col="16" colspan="4">
                        <field name="phone_prefix" colspan="2" widget_props="{'showMenu': false, 'showFolder': false}"/>
                        <field name="phone" colspan="6" string="Fix"/>
                        <field name="fax"  colspan="6" />
                    </group>
                    <group colspan="4">
                        <field name="notes" colspan="4"/>
                    </group>
                </xpath>
                <xpath expr="//page[@string='Notes']" position="replace" />
            </field>
        </record>
        <!-- Needs to be also in partner -->
        <record id="view_partner_form_prefix_fields" model="ir.ui.view">
            <field name="name">res.partner.form.prefix.fields</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="30"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='phone']" position="replace" />
                <xpath expr="//field[@name='fax']" position="replace" />
                <xpath expr="//field[@name='email']" position="replace" />
                <xpath expr="//field[@name='mobile']" position="replace" />
                <xpath expr="//separator[@string='Comunication channels']" position="after">
                    <group col="16" colspan="4">
                        <field name="mobile_prefix" colspan="2" widget_props="{'showMenu': false, 'showFolder': false}"/>
                        <field name="mobile" colspan="6"/>
                        <field name="email" colspan="6" widget="email"/>
                    </group>
                    <group col="16" colspan="4">
                        <field name="phone_prefix" colspan="2" widget_props="{'showMenu': false, 'showFolder': false}"/>
                        <field name="phone" colspan="6" string="Fix"/>
                        <field name="fax"  colspan="6" />
                    </group>
                    <group colspan="4">
                        <field name="notes" colspan="4"/>
                    </group>
                </xpath>
                <xpath expr="//page[@string='Notes']" position="replace" />
            </field>
        </record>
    </data>
</openerp>
