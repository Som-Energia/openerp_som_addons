<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_wizard_generate_cau_migration_file_form">
            <field name="name">wizard.generate.cau.migration.file.form</field>
            <field name="model">wizard.generate.cau.migration.file</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Generar fitxers de migració d'autoconsums" col="6">
                    <field name="state" invisible="1"/>
                    <field name="filename" invisible="1"/>
                    <field name="info" width="500" height="200" colspan="6" nolabel="1"/>
                    <!--<field name="info" colspan="4" nolabel="1" readonly="1" width="400"/>-->
                    <group col="6" colspan="6" attrs="{'invisible': [('state','!=','init')]}">
                        <field name="versio" colspan="6"/>
                        <button string="Cancel" special="cancel" icon="gtk-cancel" colspan="3"/>
                        <button name="generar_fitxer" string="Generar" type="object" icon="gtk-execute" colspan="3"/>
                    </group>
                    <group col="6" colspan="6" attrs="{'invisible': [('state','!=','done')]}">
                        <field name="file" filename="filename" colspan="6"/>
                        <button special="cancel" string="Cancel" icon="gtk-cancel" colspan="6"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="action_wizard_generate_cau_migration_file" model="ir.actions.act_window">
            <field name="name">Generar fitxers de migració d'autoconsums</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.generate.cau.migration.file</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wizard_generate_cau_migration_file_form"/>
            <field name="target">new</field>
        </record>
        <menuitem action="action_wizard_generate_cau_migration_file" id="menu_wizard_generate_cau_migration_file" parent="giscedata_cups.menu_autoconsum"/>
    </data>
</openerp>