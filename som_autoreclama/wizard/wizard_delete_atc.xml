<?xml version="1.0" ?>
    <openerp>
        <data>
            <record model="ir.ui.view" id="view_wizard_delete_atc">
                <field name="name">wizard.delete.atc.view</field>
                <field name="model">wizard.delete.atc</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form col="4">
                        <group string="Els següents casos seran eliminats:">
                            <field name="info" colspan="8" nolabel="1" readonly="1" height="210"/>
                        </group>
                        <group colspan="4">
                            <button icon="gtk-yes" name="delete_atc" string="Acceptar" type="object" groups="crm.group_crm_manager"
                            confirm="Aquesta acció elimina definitivament el cas ATC. N'estàs segur que vols continuar?" />
                            <button special="cancel" string="Cancel" icon="gtk-no"/>
                        </group>
                    </form>
                </field>
            </record>

            <record id="action_delete_atc" model="ir.actions.act_window">
                <field name="name">Delete ATC</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">wizard.delete.atc</field>
                <field name="view_type">form</field>
                <field name="view_mode">form</field>
                <field name="view_id" ref="view_wizard_delete_atc"/>
                <field name="target">new</field>
            </record>

            <record id="value_action_delete_atc" model="ir.values">
                <field name="object" eval="1"/>
                <field name="name">Delete ATC</field>
                <field name="key2">client_action_multi</field>
                <field name="key">action</field>
                <field name="model">giscedata.atc</field>
                <field name="value" eval="'ir.actions.act_window,'+str(ref('action_delete_atc'))" />
            </record>
        </data>
</openerp>