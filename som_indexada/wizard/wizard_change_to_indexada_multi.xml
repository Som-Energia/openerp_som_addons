<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_change_to_indexada_multi" model="ir.ui.view">
            <field name="name">wizard.change.to.indexada.multi.form</field>
            <field name="model">wizard.change.to.indexada.multi</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Canviar mode facturaciÃ³ de les polisses   ">
                    <field name="state" invisible="1"/>
