            <field name="domain">[]</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_change_to_indexada_multi"/>
        </record>
        <record id="wizard_change_to_indexada_multi" model="ir.values">
            <field name="object" eval="1"/>
            <field name="name">Canviar les polisses a indexada</field>
            <field name="key2">client_action_multi</field>
            <field name="key">action</field>
            <field name="model">giscedata.polissa</field>
            <field name="value" eval="'ir.actions.act_window,'+str(ref('action_change_to_indexada_multi'))" />
        </record>
    </data>
</openerp>
