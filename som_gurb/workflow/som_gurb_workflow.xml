<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="wkf_gurb" model="workflow">
            <field name="name">GURB Workflow</field>
            <field name="osv">som.gurb</field>
            <field name="on_create">True</field>
        </record>

        <!--Activity -->

        <record id="act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf_gurb"/>
            <field name="name">draft</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'draft'})</field>
        </record>

        <record id="act_first_opening" model="workflow.activity">
            <field name="wkf_id" ref="wkf_gurb"/>
            <field name="name">first_opening</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'draft'})</field>
        </record>

        <record id="act_complete" model="workflow.activity">
            <field name="wkf_id" ref="wkf_gurb"/>
            <field name="name">complete</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'draft'})</field>
        </record>

        <record id="act_incomplete" model="workflow.activity">
            <field name="wkf_id" ref="wkf_gurb"/>
            <field name="name">incomplete</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'draft'})</field>
        </record>

        <record id="act_registered" model="workflow.activity">
            <field name="wkf_id" ref="wkf_gurb"/>
            <field name="name">registered</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'draft'})</field>
        </record>

        <record id="act_in_process" model="workflow.activity">
            <field name="wkf_id" ref="wkf_gurb"/>
            <field name="name">in_process</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'draft'})</field>
        </record>

        <record id="act_active" model="workflow.activity">
            <field name="wkf_id" ref="wkf_gurb"/>
            <field name="name">active</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'draft'})</field>
        </record>

        <record id="act_active_incomplete" model="workflow.activity">
            <field name="wkf_id" ref="wkf_gurb"/>
            <field name="name">active_incomplete</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'draft'})</field>
        </record>

        <record id="act_active_critical_incomplete" model="workflow.activity">
            <field name="wkf_id" ref="wkf_gurb"/>
            <field name="name">active_critical_incomplete</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'draft'})</field>
        </record>

        <record id="act_reopened" model="workflow.activity">
            <field name="wkf_id" ref="wkf_gurb"/>
            <field name="name">reopened</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'draft'})</field>
        </record>

        <!-- Transition -->

        <record id="trans_draft_first_opening" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_first_opening"/>
            <field name="signal"></field>
        </record>

        <record id="trans_first_opening_complete" model="workflow.transition">
            <field name="act_from" ref="act_first_opening"/>
            <field name="act_to" ref="act_complete"/>
            <field name="signal"></field>
        </record>

        <record id="trans_complete_registered" model="workflow.transition">
            <field name="act_from" ref="act_complete"/>
            <field name="act_to" ref="act_registered"/>
            <field name="signal"></field>
        </record>

        <record id="trans_registered_in_process" model="workflow.transition">
            <field name="act_from" ref="act_registered"/>
            <field name="act_to" ref="act_in_process"/>
            <field name="signal"></field>
        </record>

        <record id="trans_in_process_active" model="workflow.transition">
            <field name="act_from" ref="act_in_process"/>
            <field name="act_to" ref="act_active"/>
            <field name="signal"></field>
        </record>

        <record id="trans_active_active_incomplete" model="workflow.transition">
            <field name="act_from" ref="act_active"/>
            <field name="act_to" ref="act_active_incomplete"/>
            <field name="signal"></field>
        </record>

        <record id="trans_active_incomplete_active_critical_incomplete" model="workflow.transition">
            <field name="act_from" ref="act_active_incomplete"/>
            <field name="act_to" ref="act_active_critical_incomplete"/>
            <field name="signal"></field>
        </record>

        <record id="trans_active_critical_incomplete_reopening" model="workflow.transition">
            <field name="act_from" ref="act_active_critical_incomplete"/>
            <field name="act_to" ref="act_reopening"/>
            <field name="signal"></field>
        </record>

        <record id="trans_reopening_incomplete" model="workflow.transition">
            <field name="act_from" ref="act_reopening"/>
            <field name="act_to" ref="act_incompleted"/>
            <field name="signal"></field>
        </record>

        <record id="trans_approved_suspended" model="workflow.transition">
            <field name="act_from" ref="act_approved"/>
            <field name="act_to" ref="act_suspended"/>
            <field name="signal">button_suspended</field>
        </record>

        <record id="trans_suspended_reapproved" model="workflow.transition">
            <field name="act_from" ref="act_suspended"/>
            <field name="act_to" ref="act_draft"/>
            <field name="signal">get_reapprove</field>
        </record>

        <record id="trans_suspended_dummy" model="workflow.transition">
            <field name="act_from" ref="act_suspended"/>
            <field name="act_to" ref="act_dummy"/>
            <field name="signal">get_never</field>
        </record>

        <record id="trans_awaiting_approved" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_approved"/>
            <field name="signal">button_approval</field>
        </record>

        <record id="trans_approved_suspended" model="workflow.transition">
            <field name="act_from" ref="act_approved"/>
            <field name="act_to" ref="act_suspended"/>
            <field name="signal">button_suspended</field>
        </record>
    </data>
</openerp>
