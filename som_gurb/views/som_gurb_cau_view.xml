<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Menú de GURBs mòdul pòlisses -->
        <menuitem name="Agrupacions" id="menu_agrupacions" />
        <menuitem id="menu_gurb_cau" name="Gestió GURB" parent="menu_agrupacions" sequence="99" />
        <!-- Llistat per defecte dels GURBs-->
        <record model="ir.ui.view" id="view_gurbs_cau_tree">
            <field name="name">som.gurbs.cau.tree</field>
            <field name="version" eval="1" />
            <field name="model">som.gurb.cau</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="GURB CAUs">
                    <field name="name" />
                    <field name="code" />
                    <field name="activation_date" />
                    <field name="self_consumption_id" />
                    <field name="generation_power" />
                    <field name="has_compensation" />
                </tree>
            </field>
        </record>
        <!-- Formulari per defecte dels GURB CAUs -->
        <record model="ir.ui.view" id="view_gurb_caus_form">
            <field name="name">som.gurb.cau.form</field>
            <field name="version" eval="1" />
            <field name="model">som.gurb.cau</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="GURB CAU">
                    <group col="6" colspan="4" string="Estats" icon="123">
                        <field name="state_date" colspan="1" />
                        <field name="state" select="1" colspan="1" />
                        <button string="Obrir GURB CAU" name="button_open" states="draft" type="workflow" confirm="Vols obrir el GURB CAU?" />
                        <button string="Tancar primera obertura" name="button_close_first_opening" states="first_opening" type="workflow" confirm="Vols tancar la primera obertura del GURB CAU?" />
                        <button string="Registrar" name="button_register" states="complete" type="workflow" confirm="Vols registar el GURB CAU?" />
                        <button string="Tornar a primera obertura" name="button_first_reopening" states="incomplete" type="workflow" confirm="Vols tornar a la primera obertura?" />
                        <button string="Tramitar" name="button_process" states="registered" type="workflow" confirm="Vols tramitar el GURB CAU?" />
                        <button string="Activar" name="button_activate" states="in_process" type="workflow" confirm="Vols activar el GURB CAU?" />
                        <button string="Reobrir" name="button_reopen_active_incomplete" states="active_inc" type="workflow" confirm="Vols reobrir el GURB CAU?" />
                        <button string="Reobrir" name="button_reopen_active_critical_incomplete" states="active_crit_inc" type="workflow" confirm="Vols reobrir el GURB CAU?" />
                        <button string="Tancar reobertura" name="button_close_reopening" states="reopened" type="workflow" confirm="Vols tancar la reobertura del GURB CAU?" />
                    </group>
                    <group col="6" colspan="4" string="General" icon="building-cottage">
                        <field name="name" select="1" />
                        <field name="code" select="1" />
                        <field name="roof_owner_id" />
                        <field name="address_id" domain="[('partner_id','=', roof_owner_id)]" />
                        <field name="province" select="2" />
                        <field name="zip_code" select="2" />
                        <field name="sig_data" />
                    </group>
                    <group col="6" colspan="4" string="Característiques" icon="tool">
                        <field name="activation_date" select="1" />
                        <field name="pricelist_id" select="2" />
                        <field name="initial_product_id" />
                        <field name="quota_product_id" />
                        <field name="cil" />
                        <field name="producer" />
                        <field name="gurb_group_id" />
                    </group>
                    <group col="6" colspan="4" string="Autoconsum" icon="solar-panel">
                        <field name="self_consumption_id" select="1" />
                        <field name="self_consumption_state" />
                        <field name="generation_power" select="1" />
                        <field name="has_compensation" select="1" />
                        <field name="self_consumption_start_date" />
                        <field name="self_consumption_end_date" />
                    </group>
                    <notebook colspan="4">
                        <page string="Betes" icon="beta">
                            <group colspan="4">
                                <field name="available_betas_kw" colspan="4"/>
                                <field name="assigned_betas_kw" colspan="4"/>
                                <field name="available_betas_percentage" colspan="4"/>
                                <field name="extra_betas_kw" colspan="4"/>
                                <field name="gift_betas_kw" colspan="4"/>
                            </group>
                            <separator string="CUPS del GURB CAU" colspan="4"/>
                            <field name="gurb_cups_ids" nolabel="1" colspan="4"/>
                        </page>
                        <page string="Observacions" icon="edit">
                            <separator string="Observacions sobre el GURB CAU" colspan="4" icon="edit" />
                            <field name="notes" colspan="4" height="600" nolabel="1" />
                        </page>
                        <page string="Històric" icon="history">
                            <separator string="Canvis realitzats al GURB" colspan="4" />
                            <field name="history_box" colspan="4" height="600" nolabel="1"/>
                        </page>
                        <page string="Altres" icon="mist">
                            <field name="meter_id" />
                        </page>
                        <page string="Documents rel." icon="paperclip">
                            <field name="related_attachments" colspan="4" nolabel="1"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
        <!-- Acció per obrir el llistat de GURB CAUs-->
        <record model="ir.actions.act_window" id="action_gurbs_cau">
            <field name="name">GURB CAUs</field>
            <field name="view_id" ref="view_gurbs_cau_tree" />
            <field name="res_model">som.gurb.cau</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- Menú per llistar els GURB CAUs-->
        <menuitem id="menu_llistar_gurbs" parent="menu_gurb_cau" action="action_gurbs_cau" />
        <!-- Menú per llistar els GURB CUPS-->
        <menuitem id="menu_llistar_gurbs_cups_all" parent="menu_gurb_cau" action="action_gurb_cups_all" />
        <menuitem id="menu_llistar_gurbs_cups_cancel" parent="menu_gurb_cau" action="action_gurb_cups_cancel" />
        <menuitem id="menu_llistar_gurbs_cups_comming" parent="menu_gurb_cau" action="action_gurb_cups_comming" />
        <menuitem id="menu_llistar_gurbs_cups_atr_pending" parent="menu_gurb_cau" action="action_gurb_cups_atr_pending" />
        <!-- Accés directe a la pestanya amb llistat dels som.gurb.cups del GURB -->
        <record id="action_som_gurb_cups_tree" model="ir.actions.act_window">
            <field name="name">Tots els CUPS del GURB CAU</field>
            <field name="src_model">som.gurb.cau</field>
            <field name="res_model">som.gurb.cups</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'active_test': False}</field>
            <field name="domain">[('gurb_cau_id', '=', active_id)]</field>
            <field name="view_id" ref="view_gurbs_cups_tree"/>
        </record>
        <record id="value_som_gurb_cups_in_gurb" model="ir.values">
            <field name="object" eval="1"/>
            <field name="name">Tots els CUPS del GURB CAU</field>
            <field name="key2">client_action_relate</field>
            <field name="key">action</field>
            <field name="model">som.gurb.cau</field>
            <field name="value" eval="'ir.actions.act_window,'+str(ref('action_som_gurb_cups_tree'))" />
        </record>
    </data>
</openerp>
