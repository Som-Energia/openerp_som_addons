<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Menú de GURBs mòdul pòlisses -->
        <!-- <menuitem id="menu_gurb_group" name="Gestió GURB GRUP" parent="menu_agrupacions" sequence="99" /> -->
        <!-- Llistat per defecte dels GURBs-->
        <record model="ir.ui.view" id="view_gurbs_group_tree">
            <field name="name">som.gurbs.group.tree</field>
            <field name="version" eval="1" />
            <field name="model">som.gurb.group</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="GURB GRUPs">
                    <field name="name" />
                    <field name="code" />
                    <!-- <field name="activation_date" /> -->
                    <!-- <field name="self_consumption_id" /> -->
                    <field name="generation_power" />
                    <!-- <field name="has_compensation" /> -->
                </tree>
            </field>
        </record>
        <!-- Formulari per defecte dels GURB CAUs -->
        <record model="ir.ui.view" id="view_gurb_groups_form">
            <field name="name">som.gurb.group.form</field>
            <field name="version" eval="1" />
            <field name="model">som.gurb.group</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="GURB GRUP">
                    <group col="6" colspan="4" string="General" icon="building-cottage">
                        <field name="name" select="1" />
                        <field name="code" select="1" />
                        <field name="roof_owner_id" />
                        <field name="address_id" domain="[('partner_id','=', roof_owner_id)]" />
                        <field name="province" select="2" />
                        <field name="zip_code" select="2" />
                    </group>
                    <group col="6" colspan="4" string="Característiques" icon="tool">
                        <field name="critical_incomplete_state" />
                        <field name="generation_power"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Betes (Tots els CAUs)" icon="beta">
                            <group colspan="4">
                                <!-- <field name="available_betas_kw" colspan="4"/> -->
                                <field name="assigned_betas_kw" colspan="4"/>
                                <field name="available_betas_percentage" colspan="4"/>
                                <field name="extra_betas_kw" colspan="4"/>
                                <field name="gift_betas_kw" colspan="4"/>
                            </group>
                            <separator string="CAUs del GURB Grup" colspan="4"/>
                            <field name="gurb_cau_ids" nolabel="1" colspan="4"/>
                        </page>
                        <page string="Preus i Topalls" icon="credit-card">
                            <group col="6" colspan="4" string="Contractes 2.0" icon="home">
                                <field name="min_power_20" />
                                <field name="max_power_20" />
                            </group>
                            <group col="6" colspan="4" string="Contractes 3.0" icon="building-factory-2">
                                <field name="min_power_30" />
                                <field name="max_power_30" />
                            </group>
                            <group col="6" colspan="4" string="Llista de preus del Gurb Grup" icon="receipt">
                                <field name="pricelist_id" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Observacions" icon="edit">
                            <separator string="Observacions sobre el GURB grup" colspan="4" icon="edit" />
                            <field name="notes" colspan="4" height="600" nolabel="1" />
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
        <!-- Acció per obrir el llistat de GURB groups-->
        <record model="ir.actions.act_window" id="action_gurbs_group">
            <field name="name">GURB Grups</field>
            <field name="view_id" ref="view_gurbs_group_tree" />
            <field name="res_model">som.gurb.group</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- Menú per llistar els GURB Groups-->
        <menuitem id="menu_llistar_gurb_groups" parent="menu_gurb_cau" action="action_gurbs_group" />
        <!-- Accés directe a la pestanya amb llistat dels som.gurb.cau del GURB Group -->
        <record id="action_som_gurb_cau_tree" model="ir.actions.act_window">
            <field name="name">Tots els GurbCaus del GurbGrup</field>
            <field name="src_model">som.gurb.group</field>
            <field name="res_model">som.gurb.cau</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'active_test': False}</field>
            <field name="domain">[('gurb_group_id', '=', active_id)]</field>
            <field name="view_id" ref="view_gurbs_cau_tree"/>
        </record>
        <record id="value_som_gurb_group_in_gurb" model="ir.values">
            <field name="object" eval="1"/>
            <field name="name">Tots els GurbCaus del GurbGrup</field>
            <field name="key2">client_action_relate</field>
            <field name="key">action</field>
            <field name="model">som.gurb.group</field>
            <field name="value" eval="'ir.actions.act_window,'+str(ref('action_som_gurb_cau_tree'))" />
        </record>
    </data>
</openerp>
