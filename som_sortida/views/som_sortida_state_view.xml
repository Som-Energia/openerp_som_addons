<openerp>
    <data>
        <!-- Vista tree -->
        <record model="ir.ui.view" id="view_som_sortida_state_tree">
            <field name="name">som.sortida.state.tree</field>
            <field name="model">som.sortida.state</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Estats de sortida">
                    <field name="weight" select="1"/>
                    <field name="name" select="1"/>
                    <field name="template_id" select="1"/>
                    <field name="process_id" select="1"/>
                    <field name="pending_days" select="2"/>
                    <field name="active" select="1"/>
                    <field name="is_last" select="1"/>
                </tree>
            </field>
        </record>
        <!-- Vista form -->
        <record model="ir.ui.view" id="view_som_sortida_state_form">
            <field name="name">som.sortida.state.form</field>
            <field name="model">som.sortida.state</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Estat de sortida">
                    <group>
                        <field name="name"/>
                        <field name="weight"/>
                        <field name="process_id"/>
                        <field name="pending_days_type"/>
                        <field name="pending_days"/>
                        <field name="active"/>
                        <field name="is_last"/>
                        <field name="template_id"/>
                    </group>
                </form>
            </field>
        </record>
        <!-- Acció per obrir el llistat -->
        <record model="ir.actions.act_window" id="action_som_sortida_state">
            <field name="name">Estats de sortida de les pòlisses sense sòcia</field>
            <field name="res_model">som.sortida.state</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
        </record>
        <!-- Assignar la vista tree -->
        <record model="ir.actions.act_window.view" id="action_som_sortida_state_tree_view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_som_sortida_state_tree"/>
            <field name="act_window_id" ref="action_som_sortida_state"/>
        </record>
        <!-- Assignar la vista form -->
        <record model="ir.actions.act_window.view" id="action_som_sortida_state_form_view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_som_sortida_state_form"/>
            <field name="act_window_id" ref="action_som_sortida_state"/>
        </record>
        <!-- Entrada de menú -->
        <menuitem
            id="menu_som_sortida_state"
            name="Estats de sortida"
            action="action_som_sortida_state"
            parent="giscedata_polissa.menu_configuracio"/>
    </data>
</openerp>
